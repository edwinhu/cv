\usepackage{titlesec}

%% Redefine Title
\renewcommand*{\maketitle}{%
  {
    \centering{\Huge \scshape \@title}
    \noindent\rule{\textwidth}{0.4pt}
    \\[0.25in]
  }
}

%% Redefine Section Headings, etc.
\titleformat{\section} %command
            {\Large\scshape\raggedright} %format
            {} %prefix number label
            {0pt} %sep
            {} %before
            [\titlerule] %after

\titlespacing{\section}
            {0pt}% max width of the title(for wrap/leftmargin shape)
            {0pt}% vertical space before the title
            {0.5em}% separation between title and text

\titleformat{\subsection} %command
            [runin] %shape
            {\normalsize} %format
            {} %prefix number label
            {0pt} %sep
            {} %before
            [] %after
            
\titlespacing{\subsection}
            {0pt}% max width of the title(for wrap/leftmargin shape)
            {0.5em}% vertical space before the title
            {0.25em}% separation between title and text

\titleformat{\subsubsection} %command
            [runin] %shape
            {} %format
            {} %prefix number label
            {0.5em} %sep
            {} %before
            [] %after
            
\titlespacing{\subsubsection}
            {1em}% max width of the title(for wrap/leftmargin shape)
            {0pt}% vertical space before the title
            {0.5em}% separation betweexn title and text
            [\leftskip 1em]
